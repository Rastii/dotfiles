# For the benefit of emacs users: -*- shell-script -*-
exec xrdb -merge ~/.Xresources
exec xsetroot -cursor_name left_ptr
exec wmname LG3D

escape C-z

set border 0

bind a exec ratpoison -d :0.0 -c "echo `date +'%r - %A %n    %D - %B'`  `cal | tail -n +2 | sed -e 's/^Su/\n\n Su/' -e 's/.*/ & /' -e \"s/\ $(date +%e)\ /\/\"`"

# virtual workspaces
gnewbg one
gnewbg two

definekey top s-l exec ratpoison -c "select -" -c "gprev" -c "next"
definekey top s-h exec ratpoison -c "select -" -c "gnext" -c "next"

# switch between windows
definekey top s-j next
definekey top s-k prev

# apps
bind c exec urxvt
bind f exec firefox
bind e exec emacsclient -a "" -nc

# xfce4-panel on top
# unmanage xfce4-panel
# set padding 0 20 0 0

# spawn some apps
exec urxvt
exec emacsclient -nc -a ""
